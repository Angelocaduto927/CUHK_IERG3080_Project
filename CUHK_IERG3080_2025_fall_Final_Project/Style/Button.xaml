<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

	<Style x:Key="GlowingButtonStyle" TargetType="Button">
		<!-- Base appearance -->
		<Setter Property="Background" Value="#FF1E3A8A"/>
		<!-- Deep blue -->
		<Setter Property="Foreground" Value="#FFD4AF37"/>
		<!-- Gold text -->
		<Setter Property="BorderBrush" Value="#FFD4AF37"/>
		<!-- Gold border -->
		<Setter Property="BorderThickness" Value="2"/>
		<Setter Property="Padding" Value="8,4"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="Effect" Value="{x:Null}"/>
		<Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>

		<Setter Property="RenderTransform">
			<Setter.Value>
				<ScaleTransform ScaleX="1" ScaleY="1"/>
			</Setter.Value>
		</Setter>

		<!-- Button template -->
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6"
                            Padding="{TemplateBinding Padding}">
						<ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            RecognizesAccessKey="True"/>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>

		<Style.Triggers>

			<!-- Hover highlight -->
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="#FF3B82F6"/>
				<!-- Lighter blue -->
				<Setter Property="Foreground" Value="#FFFFE08A"/>
				<!-- Brighter gold -->
				<Setter Property="BorderBrush" Value="#FFFFE08A"/>
				<Setter Property="Effect">
					<Setter.Value>
						<DropShadowEffect
                            Color="#803B82F6"
                            BlurRadius="18"
                            ShadowDepth="0"
                            Opacity="0.9"/>
					</Setter.Value>
				</Setter>
				<Setter Property="RenderTransform">
					<Setter.Value>
						<ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
					</Setter.Value>
				</Setter>
			</Trigger>

			<!-- Pressed -->
			<Trigger Property="IsPressed" Value="True">
				<Setter Property="RenderTransform">
					<Setter.Value>
						<ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
					</Setter.Value>
				</Setter>
			</Trigger>

			<!-- Disabled -->
			<Trigger Property="IsEnabled" Value="False">
				<Setter Property="Opacity" Value="0.45"/>
				<Setter Property="Cursor" Value="Arrow"/>
			</Trigger>

			<!-- Click sound effect -->
			<EventTrigger RoutedEvent="PreviewMouseLeftButtonDown">
				<BeginStoryboard>
					<Storyboard>
						<MediaTimeline
                            Source="pack://application:,,,/Assets/Sound/click.wav"
                            BeginTime="{x:Static sys:TimeSpan.Zero}" />
					</Storyboard>
				</BeginStoryboard>
			</EventTrigger>

		</Style.Triggers>
	</Style>

</ResourceDictionary>
