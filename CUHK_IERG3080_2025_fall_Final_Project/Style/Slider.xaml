<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="GlowingSliderStyle" TargetType="Slider">
		<Setter Property="Height" Value="28"/>
		<Setter Property="Foreground" Value="#FFD4AF37"/>
		<!-- Gold -->
		<Setter Property="Background" Value="#FFC9CCD6"/>
		<!-- Silver -->
		<Setter Property="Effect" Value="{x:Null}"/>
		<Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>

		<Setter Property="RenderTransform">
			<Setter.Value>
				<ScaleTransform ScaleX="1" ScaleY="1"/>
			</Setter.Value>
		</Setter>

		<!-- ========================= -->
		<!-- Custom Slider Template    -->
		<!-- ========================= -->
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Slider">
					<Grid Height="28">
						<!-- Track background -->
						<Border
                            Height="6"
                            VerticalAlignment="Center"
                            Background="{TemplateBinding Background}"
                            CornerRadius="3"/>

						<Track x:Name="PART_Track">
							<!-- Filled portion -->
							<Track.DecreaseRepeatButton>
								<RepeatButton
                                    Height="6"
                                    Background="#FFE5E7EB"
                                    BorderThickness="0"
                                    IsHitTestVisible="False"/>
							</Track.DecreaseRepeatButton>

							<!-- Thumb (gold marker) -->
							<Track.Thumb>
								<Thumb Width="18" Height="18">
									<Thumb.Template>
										<ControlTemplate TargetType="Thumb">
											<Ellipse
                                                Fill="#FFD4AF37"
                                                Stroke="#FFFFE08A"
                                                StrokeThickness="2"/>
										</ControlTemplate>
									</Thumb.Template>
								</Thumb>
							</Track.Thumb>

							<!-- Remaining track -->
							<Track.IncreaseRepeatButton>
								<RepeatButton
                                    Height="6"
                                    Background="#FF9CA3AF"
                                    BorderThickness="0"
                                    IsHitTestVisible="False"/>
							</Track.IncreaseRepeatButton>
						</Track>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>

		<!-- ========================= -->
		<!-- Hover glow                -->
		<!-- ========================= -->
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Effect">
					<Setter.Value>
						<DropShadowEffect
                            Color="#403A86FF"
                            BlurRadius="14"
                            ShadowDepth="0"
                            Opacity="0.9"/>
					</Setter.Value>
				</Setter>
				<Setter Property="RenderTransform">
					<Setter.Value>
						<ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
					</Setter.Value>
				</Setter>
			</Trigger>
		</Style.Triggers>

	</Style>

</ResourceDictionary>
