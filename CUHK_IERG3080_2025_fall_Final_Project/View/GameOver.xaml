<UserControl x:Class="CUHK_IERG3080_2025_fall_Final_Project.View.GameOver"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Padding="16">

	<UserControl.Background>
		<ImageBrush ImageSource="/Assets/Image/GameOverBG.png"
                    Stretch="UniformToFill"/>
	</UserControl.Background>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- GAME OVER title -->
		<TextBlock Grid.Row="0"
                   Text="Game Over"
                   Foreground="White"
                   FontSize="18"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>

		<!-- Score Display Container -->
		<Border Grid.Row="1"
                Width="Auto"
                Margin="0,20"
                Background="#CC1E1E1E"
                BorderBrush="#FFD4AF37"
                BorderThickness="2"
                CornerRadius="8"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
			<Border.Effect>
				<DropShadowEffect Color="#803B82F6"
                                  BlurRadius="20"
                                  ShadowDepth="0"
                                  Opacity="0.6"/>
			</Border.Effect>

			<!-- MAIN CONTENT -->
			<StackPanel Orientation="Horizontal"
						HorizontalAlignment="Center">
				<StackPanel Orientation="Vertical"
							Margin="48,0,24,0"
                            HorizontalAlignment="Center">
				    <!-- Grade -->
				    <TextBlock Text="{Binding Grade}"
                               Foreground="#FFD4AF37"
                               FontSize="120"
                               FontWeight="Bold"
                               HorizontalAlignment="Center">
					    <TextBlock.Effect>
						    <DropShadowEffect Color="#FFD4AF37"
                                              BlurRadius="18"
                                              ShadowDepth="0"
                                              Opacity="0.9"/>
					    </TextBlock.Effect>
				    </TextBlock>

				    <!-- Score -->
				    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,16">
					    <TextBlock Text="SCORE "
                                   Foreground="#FFD4AF37"
                                   FontSize="24"
                                   FontWeight="SemiBold"/>
					    <TextBlock Text="{Binding TotalScore}"
                                   Foreground="#FFD4AF37"
                                   FontSize="24"
                                   FontWeight="Bold"/>
				    </StackPanel>
				</StackPanel>
				    <!-- ===================== -->
				    <!-- STATS AREA -->
				    <!-- ===================== -->
				    <StackPanel Margin="24,24,48,24">
					    <StackPanel Orientation="Horizontal" Margin="0,4">
						    <TextBlock Text="Accuracy: "
                                       Foreground="#FFB0B0B0"
                                       FontSize="15"/>
						    <TextBlock Text="{Binding Accuracy}"
                                       Foreground="#FFD0D0D0"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
					    </StackPanel>

					    <StackPanel Orientation="Horizontal" Margin="0,4">
						    <TextBlock Text="Miss: "
                                       Foreground="#FFB0B0B0"
                                       FontSize="15"/>
						    <TextBlock Text="{Binding MissHits}"
                                       Foreground="#FFD0D0D0"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
					    </StackPanel>

					    <StackPanel Orientation="Horizontal" Margin="0,4">
						    <TextBlock Text="Max Combo: "
                                       Foreground="#FFB0B0B0"
                                       FontSize="15"/>
						    <TextBlock Text="{Binding MaxCombo}"
                                       Foreground="#FFD0D0D0"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
					    </StackPanel>

					    <StackPanel Orientation="Horizontal" Margin="0,4">
						    <TextBlock Text="Perfect: "
                                       Foreground="#FFB0B0B0"
                                       FontSize="15"/>
						    <TextBlock Text="{Binding PerfectHits}"
                                       Foreground="#FFD0D0D0"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
					    </StackPanel>

					    <StackPanel Orientation="Horizontal" Margin="0,4">
						    <TextBlock Text="Good: "
                                       Foreground="#FFB0B0B0"
                                       FontSize="15"/>
						    <TextBlock Text="{Binding GoodHits}"
                                       Foreground="#FFD0D0D0"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
					    </StackPanel>

					    <StackPanel Orientation="Horizontal" Margin="0,4">
						    <TextBlock Text="Bad: "
                                       Foreground="#FFB0B0B0"
                                       FontSize="15"/>
						    <TextBlock Text="{Binding BadHits}"
                                       Foreground="#FFD0D0D0"
                                       FontSize="15"
                                       FontWeight="SemiBold"/>
					    </StackPanel>

				    </StackPanel>
			</StackPanel>
		</Border>

		<!-- Bottom Home button -->
		<StackPanel Grid.Row="2"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,24">
			<Button Content="Home"
                    Width="120"
                    Height="40"
                    Command="{Binding DataContext.TitleScreenCommand,
                                      RelativeSource={RelativeSource AncestorType=Window}}"
                    ToolTip="Return to title screen"/>
		</StackPanel>

	</Grid>
</UserControl>
