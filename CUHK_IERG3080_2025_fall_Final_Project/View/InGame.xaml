<UserControl x:Class="CUHK_IERG3080_2025_fall_Final_Project.View.InGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:CUHK_IERG3080_2025_fall_Final_Project.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600"
             Focusable="True">

	<UserControl.Resources>
		<vm:BoolToVisibilityConverter x:Key="BoolToVis"/>
	</UserControl.Resources>

	<UserControl.DataContext>
		<vm:InGameVM/>
	</UserControl.DataContext>

	<UserControl.InputBindings>
		<!-- Dynamically map key bindings -->
		<KeyBinding Key="{Binding KeyBindings[0]}" Command="{Binding KeyPressCommand}" CommandParameter="0"/>
		<KeyBinding Key="{Binding KeyBindings[1]}" Command="{Binding KeyPressCommand}" CommandParameter="1"/>
		<KeyBinding Key="{Binding KeyBindings[2]}" Command="{Binding KeyPressCommand}" CommandParameter="2"/>
		<KeyBinding Key="{Binding KeyBindings[3]}" Command="{Binding KeyPressCommand}" CommandParameter="3"/>
	</UserControl.InputBindings>

	<UserControl.Background>
		<ImageBrush ImageSource="/Assets/Image/InGameBG.png" Stretch="UniformToFill"/>
	</UserControl.Background>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Player 1 -->
		<Border Grid.Row="0" Background="#66000000" BorderBrush="#FF6B4E" BorderThickness="0,2" Height="160" Margin="0,20,0,10">
			<Canvas ClipToBounds="True">
				<Rectangle Width="4" Height="{Binding RelativeSource={RelativeSource AncestorType=Canvas}, Path=ActualHeight}"
                           Fill="#FF6B4E" Canvas.Left="300"/>
				<Ellipse Width="60" Height="60" Stroke="#FF6B4E" StrokeThickness="6" Fill="#44FF6B4E"
                         Canvas.Left="270" Canvas.Top="50">
					<Ellipse.Effect>
						<DropShadowEffect Color="#FF6B4E" BlurRadius="20" ShadowDepth="0"/>
					</Ellipse.Effect>
				</Ellipse>

				<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,0,0">

					<!-- Big Score -->
					<TextBlock Text="{Binding Players[0].Score.Score}"
                               FontSize="36" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#FFD700" Margin="0,0,0,10"/>

					<!-- Small Stats Grid -->
					<Grid HorizontalAlignment="Center">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="130"/>
							<ColumnDefinition Width="130"/>
						</Grid.ColumnDefinitions>

						<!-- Left Column -->
						<StackPanel Grid.Column="0">
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="PERFECT: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[0].Score.PerfectHit}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="GOOD: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[0].Score.GoodHit}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="BAD: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[0].Score.BadHit}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
						</StackPanel>

						<!-- Right Column -->
						<StackPanel Grid.Column="1">
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="MAX COMBO: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[0].Score.MaxCombo}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="MISS: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[0].Score.MissHit}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="ACCURACY: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[0].Score.Accuracy}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
						</StackPanel>
					</Grid>

				</StackPanel>

				<!-- Notes ItemsControl -->
				<ItemsControl ItemsSource="{Binding Player1Notes}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<Canvas/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemContainerStyle>
						<Style>
							<Setter Property="Canvas.Left" Value="{Binding X}"/>
							<Setter Property="Canvas.Top" Value="{Binding Y}"/>
						</Style>
					</ItemsControl.ItemContainerStyle>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Grid Width="60" Height="60">
								<Ellipse>
									<Ellipse.Fill>
										<RadialGradientBrush>
											<GradientStop Color="{Binding Inner}" Offset="0.3"/>
											<GradientStop Color="{Binding Outer}" Offset="1"/>
										</RadialGradientBrush>
									</Ellipse.Fill>
								</Ellipse>
								<Ellipse Stroke="{Binding Border}" StrokeThickness="4"/>
								<TextBlock Text="{Binding Icon}" FontSize="40" FontWeight="Bold" Foreground="#C0C0C0"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</Grid>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>

			</Canvas>
		</Border>

		<!-- Player 2 -->
		<Border Grid.Row="1" Background="#66000000" BorderBrush="#4E9AFF" BorderThickness="0,2" Height="160" Margin="0,10,0,20"
                >
			<Canvas ClipToBounds="True">
				<Rectangle Width="4" Height="{Binding RelativeSource={RelativeSource AncestorType=Canvas}, Path=ActualHeight}"
                           Fill="#4E9AFF" Canvas.Left="300"/>
				<Ellipse Width="60" Height="60" Stroke="#4E9AFF" StrokeThickness="6" Fill="#444E9AFF"
                         Canvas.Left="270" Canvas.Top="50">
					<Ellipse.Effect>
						<DropShadowEffect Color="#4E9AFF" BlurRadius="20" ShadowDepth="0"/>
					</Ellipse.Effect>
				</Ellipse>

				<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,10,0,0">

					<!-- Big Score -->
					<TextBlock Text="{Binding Players[1].Score.Score}"
                               FontSize="36" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#FFD700" Margin="0,0,0,10"/>

					<!-- Small Stats Grid -->
					<Grid HorizontalAlignment="Center">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="130"/>
							<ColumnDefinition Width="130"/>
						</Grid.ColumnDefinitions>

						<!-- Left Column -->
						<StackPanel Grid.Column="0">
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="PERFECT: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[1].Score.PerfectHit}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="GOOD: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[1].Score.GoodHit}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="BAD: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[1].Score.BadHit}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
						</StackPanel>

						<!-- Right Column -->
						<StackPanel Grid.Column="1">
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="MAX COMBO: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[1].Score.MaxCombo}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="MISS: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[1].Score.MissHit}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock Text="ACCURACY: " FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0"/>
								<TextBlock Text="{Binding Players[1].Score.Accuracy}" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI" Foreground="#C0C0C0" HorizontalAlignment="Right"/>
							</StackPanel>
						</StackPanel>
					</Grid>

				</StackPanel>

				<ItemsControl ItemsSource="{Binding Player2Notes}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<Canvas/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemContainerStyle>
						<Style>
							<Setter Property="Canvas.Left" Value="{Binding X}"/>
							<Setter Property="Canvas.Top" Value="{Binding Y}"/>
						</Style>
					</ItemsControl.ItemContainerStyle>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Grid Width="60" Height="60">
								<Ellipse>
									<Ellipse.Fill>
										<RadialGradientBrush>
											<GradientStop Color="{Binding Inner}" Offset="0.3"/>
											<GradientStop Color="{Binding Outer}" Offset="1"/>
										</RadialGradientBrush>
									</Ellipse.Fill>
								</Ellipse>
								<Ellipse Stroke="{Binding Border}" StrokeThickness="4"/>
								<TextBlock Text="{Binding Icon}" FontSize="40" FontWeight="Bold" Foreground="#C0C0C0"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</Grid>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>

			</Canvas>
		</Border>

	</Grid>
</UserControl>
