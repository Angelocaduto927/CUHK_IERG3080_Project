<UserControl x:Class="CUHK_IERG3080_2025_fall_Final_Project.View.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:CUHK_IERG3080_2025_fall_Final_Project.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Viewbox Stretch="UniformToFill">
        <Grid Width="1539" Height="1024">
            <Grid.Background>
                <ImageBrush ImageSource="/Assets/Image/InGameBG.png" Stretch="Fill" />
            </Grid.Background>


            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="853" Height="454">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="428*"/>
                    <ColumnDefinition Width="425*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Settings" FontSize="50" FontWeight="SemiBold"
						   Foreground="#C0C0C0" HorizontalAlignment="Left" Margin="324,-250,0,256" Grid.ColumnSpan="2" Width="206"/>

                <Grid Grid.ColumnSpan="2" Margin="0,70,0,0" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="61*" />
                        <ColumnDefinition Width="12*" />
                        <ColumnDefinition Width="49*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Margin="-19,-145,30,142" Background="#FF1E1E1E" BorderBrush="#FFFFD700"
							BorderThickness="2" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Player 1" Foreground="#FFFFD700" FontWeight="SemiBold" FontSize="30" Margin="0,0,0,8"/>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Speed: " Foreground="#FFFFD700" Margin="4,0,4,6" FontSize="25"/>
                                <TextBlock Text="{Binding Player1Speed}" Foreground="LightBlue" Margin="0,0,0,6" FontSize="25"/>
                            </StackPanel>

                            <Slider Minimum="1" Maximum="4" Value="{Binding Player1Speed, Mode=TwoWay}"
									TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Stretch"/>

                            <Rectangle Height="20" Fill="Transparent" />

                            <Grid Margin="0,6,6,0" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Blue Key 1" VerticalAlignment="Center" Foreground="#FFFFD700" FontSize="25"/>
                                <Button Grid.Column="1" Content="{Binding P1Blue1}" FontSize="25"
										Command="{Binding RebindP1Blue1Command}" HorizontalAlignment="Stretch" />
                            </Grid>

                            <Grid Margin="0,6,6,0" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Blue Key 2" VerticalAlignment="Center" Foreground="#FFFFD700" FontSize="25"/>
                                <Button Grid.Column="1" Content="{Binding P1Blue2}" FontSize="25"
										Command="{Binding RebindP1Blue2Command}" HorizontalAlignment="Stretch" />
                            </Grid>

                            <Grid Margin="0,6,6,0" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Red Key 1" VerticalAlignment="Center" Foreground="#FFFFD700" FontSize="25"/>
                                <Button Grid.Column="1" Content="{Binding P1Red1}" FontSize="25"
										Command="{Binding RebindP1Red1Command}" HorizontalAlignment="Stretch" />
                            </Grid>

                            <Grid Margin="0,6,6,0" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Red Key 2" VerticalAlignment="Center" Foreground="#FFFFD700" FontSize="25"/>
                                <Button Grid.Column="1" Content="{Binding P1Red2}" FontSize="25"
										Command="{Binding RebindP1Red2Command}" HorizontalAlignment="Stretch" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Margin="26,-145,-13,142" Background="#FF1E1E1E" BorderBrush="#FFFFD700"
							BorderThickness="2" CornerRadius="6" Padding="12" Grid.ColumnSpan="2">
                        <StackPanel>
                            <TextBlock Text="Player 2" Foreground="#FFFFD700" FontWeight="SemiBold" FontSize="30" Margin="0,0,0,8" />

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Speed: " Foreground="#FFFFD700" Margin="4,0,4,6" FontSize="25"/>
                                <TextBlock Text="{Binding Player2Speed}" Foreground="LightBlue" Margin="0,0,0,6" FontSize="25"/>
                            </StackPanel>

                            <Slider Minimum="1" Maximum="4" Value="{Binding Player2Speed, Mode=TwoWay}"
									TickFrequency="1" IsSnapToTickEnabled="True" HorizontalAlignment="Stretch"/>

                            <Rectangle Height="20" Fill="Transparent" />

                            <Grid Margin="0,6,6,0" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Blue Key 1" VerticalAlignment="Center" Foreground="#FFFFD700" FontSize="25" />
                                <Button Grid.Column="1" Content="{Binding P2Blue1}" FontSize="25"
										Command="{Binding RebindP2Blue1Command}" HorizontalAlignment="Stretch" />
                            </Grid>

                            <Grid Margin="0,6,6,0" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Blue Key 2" VerticalAlignment="Center" Foreground="#FFFFD700" FontSize="25" />
                                <Button Grid.Column="1" Content="{Binding P2Blue2}" FontSize="25"
										Command="{Binding RebindP2Blue2Command}" HorizontalAlignment="Stretch" />
                            </Grid>

                            <Grid Margin="0,6,6,0" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Red Key 1" VerticalAlignment="Center" Foreground="#FFFFD700" FontSize="25"/>
                                <Button Grid.Column="1" Content="{Binding P2Red1}" FontSize="25"
										Command="{Binding RebindP2Red1Command}" HorizontalAlignment="Stretch" />
                            </Grid>

                            <Grid Margin="0,6,6,0" Height="50">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Red Key 2" VerticalAlignment="Center" Foreground="#FFFFD700" FontSize="25"/>
                                <Button Grid.Column="1" Content="{Binding P2Red2}" FontSize=" 25"
										Command="{Binding RebindP2Red2Command}" HorizontalAlignment="Stretch" />
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>

                <Button Grid.Row="1" Content="Back" Width="250" Height="60"
					HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="302,0,0,12"
                    FontSize="30"
					Command="{Binding BackCommand}" Grid.ColumnSpan="2"/>
            </Grid>  
        </Grid>
    </Viewbox>
</UserControl>