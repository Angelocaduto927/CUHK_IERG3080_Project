<UserControl x:Class="CUHK_IERG3080_2025_fall_Final_Project.View.TitleScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CUHK_IERG3080_2025_fall_Final_Project.View"
             xmlns:model="clr-namespace:CUHK_IERG3080_2025_fall_Final_Project.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Viewbox Stretch="UniformToFill">
        <Grid Width="1536" Height="1024" RenderTransformOrigin="0.507,0.516">
            <Grid.Background>
                <ImageBrush ImageSource="/CUHK_IERG3080_2025_fall_Final_Project;component/Assets/Image/TitleBG.png"
			               Stretch="Fill"/>
            </Grid.Background>


            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="9*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                <Button Content="SINGLE PLAYER"
						    Width="250"
						    Height="60"
						    Margin="0,6"
                            FontSize="20"
						    Command="{Binding SinglePlayerCommand}"
						    CommandParameter="{x:Static model:GameModeManager+Mode.SinglePlayer}"/>

                <Button Content="LOCAL MULTIPLAYER"
                            Width="250"
                            Height="60"
                            Margin="0,6"
                            FontSize="20"
                            Command="{Binding LocalMultiPlayerCommand}"/>

                <Button Content="ONLINE MULTIPLAYER"
                            Width="250"
                            Height="60"
                            FontSize="20"
                            Margin="0,6"
                            Command="{Binding OnlineMultiPlayerCommand}"/>
                <Button Content="SETTINGS"
                            Width="250"
                            Height="60"
                            FontSize="20"
                            HorizontalAlignment="Center"
                            Margin="0,12,0,24"
                            Command="{Binding DataContext.SettingCommand,
                                                RelativeSource={RelativeSource AncestorType=Window}}"/>
            </StackPanel>   
        </Grid>
    </Viewbox>
</UserControl>
