<UserControl x:Class="CUHK_IERG3080_2025_fall_Final_Project.View.TitleScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CUHK_IERG3080_2025_fall_Final_Project.View"
             xmlns:model="clr-namespace:CUHK_IERG3080_2025_fall_Final_Project.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">

    <Grid>
        <!-- Background image -->
		<Image Source="/CUHK_IERG3080_2025_fall_Final_Project;component/Assets/Image/TitleBG.png"
			   Stretch="UniformToFill"
			   HorizontalAlignment="Center"
			   VerticalAlignment="Top"
			   Panel.ZIndex="0"/>


		<!-- Foreground content -->
        <Grid Panel.ZIndex="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Menu buttons -->
            <StackPanel Grid.Row="1"
                        Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

				<Button Content="SINGLEPLAYER"
						Width="160"
						Height="42"
						Margin="0,6"
						Command="{Binding SinglePlayerCommand}"
						CommandParameter="{x:Static model:GameModeManager+Mode.SinglePlayer}"/>

				<Button Content="LOCAL MULTIPLAYER"
                        Width="160"
                        Height="42"
                        Margin="0,6"
                        Command="{Binding LocalMultiPlayerCommand}"/>

                <Button Content="ONLINE MULTIPLAYER"
                        Width="160"
                        Height="42"
                        Margin="0,6"
                        Command="{Binding OnlineMultiPlayerCommand}"/>
            </StackPanel>

            <!-- Settings button -->
            <Button Grid.Row="2"
                    Content="SETTINGS"
                    Width="160"
                    Height="40"
                    HorizontalAlignment="Center"
                    Margin="0,12,0,24"
                    Command="{Binding DataContext.SongSelectionCommand,
                                      RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Grid>
    </Grid>
</UserControl>
